<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/complain_info"
        android:layout_width="315dp"
        android:textAlignment="center"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:text="@string/complain_info"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/complain_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/complain_info"
        android:background="@android:drawable/edit_text"
        android:hint="@string/complain_type"
        />

    <EditText
        android:id="@+id/complain_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/edit_text"
        android:layout_below="@+id/complain_type"
        android:hint="@string/complain_write_area_info"
        />

    <Button
        android:id="@+id/complain_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/send"
        android:text="@string/complain_submit"
        android:background="@color/lightGreen"
        android:textSize="20dp"
        android:shadowRadius="0"
        android:layout_below="@+id/complain_input"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:paddingEnd="10dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

</RelativeLayout>

